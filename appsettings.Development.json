{
	"ConnectionStrings": {
		"DefaultConnection": "Host=localhost;Database=marketplace_results_dev;Username=postgres;Password=password123;Port=5432"
	},
	"Cors": {
		"AllowedOrigins": ["http://localhost:3000", "http://localhost:8080", "http://localhost:5173", "https://localhost:3000", "http://127.0.0.1:3000"],
		"AllowCredentials": true,
		"AllowedMethods": ["*"],
		"AllowedHeaders": ["*"]
	},
	"RateLimiting": {
		"EnableRateLimiting": false,
		"PermitLimit": 1000,
		"WindowInSeconds": 60,
		"QueueLimit": 100
	},
	"HealthChecks": {
		"EnableUI": true,
		"UIPath": "/health-ui",
		"CheckInterval": 10
	},
	"Logging": {
		"LogLevel": {
			"Default": "Debug",
			"Microsoft.AspNetCore": "Information",
			"Microsoft.EntityFrameworkCore.Database.Command": "Information",
			"resultsService.Presentation.Middleware.RequestLoggingMiddleware": "Debug",
			"resultsService.Presentation.Middleware.GlobalExceptionHandlingMiddleware": "Debug",
			"resultsService": "Debug"
		},
		"Console": {
			"IncludeScopes": true,
			"TimestampFormat": "HH:mm:ss.fff ",
			"FormatterName": "simple"
		}
	}
}
