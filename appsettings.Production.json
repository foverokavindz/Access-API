{
	"ConnectionStrings": {
		"DefaultConnection": "Host=${DB_HOST};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};SSL Mode=Require;Trust Server Certificate=true"
	},
	"Cors": {
		"AllowedOrigins": ["https://your-production-frontend.com", "https://admin.your-domain.com"],
		"AllowCredentials": true,
		"AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
		"AllowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"]
	},
	"RateLimiting": {
		"EnableRateLimiting": true,
		"PermitLimit": 1000,
		"WindowInSeconds": 60,
		"QueueLimit": 50
	},
	"Caching": {
		"DefaultExpirationMinutes": 30,
		"HealthCheckCacheMinutes": 5
	},
	"HealthChecks": {
		"EnableUI": false,
		"UIPath": "/health-ui",
		"CheckInterval": 60
	},
	"Logging": {
		"LogLevel": {
			"Default": "Warning",
			"Microsoft.AspNetCore": "Warning",
			"Microsoft.EntityFrameworkCore.Database.Command": "Warning",
			"resultsService": "Information"
		},
		"Console": {
			"IncludeScopes": false,
			"TimestampFormat": "yyyy-MM-dd HH:mm:ss "
		}
	},
	"AllowedHosts": "your-domain.com;*.your-domain.com"
}
